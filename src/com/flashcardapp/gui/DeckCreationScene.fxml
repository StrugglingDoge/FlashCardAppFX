<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<VBox fx:id="deckCreationVBox" spacing="20" alignment="TOP_CENTER" styleClass="container" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.flashcardapp.gui.DeckCreationSceneController" stylesheets="@style.css">
    <Text text="Create Deck" styleClass="scene-title"/>

    <Separator orientation="HORIZONTAL" />

    <GridPane hgap="10" vgap="10" alignment="CENTER">
        <!--<ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="100" /> -->
        <columnConstraints>
            <ColumnConstraints minWidth="100" prefWidth="100" hgrow="SOMETIMES" />
            <ColumnConstraints minWidth="200" prefWidth="200" hgrow="SOMETIMES" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10" prefHeight="30" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10" prefHeight="100" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10" prefHeight="50" vgrow="SOMETIMES" />
        </rowConstraints>

        <Label text="Question:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="questionTextField" promptText="Enter question here" maxWidth="1.0" GridPane.columnIndex="1" GridPane.rowIndex="0" styleClass="text-field"/>

        <Label text="Answer:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextArea fx:id="answerTextArea" promptText="Enter answer here" maxWidth="1.0" GridPane.columnIndex="1" GridPane.rowIndex="1" prefHeight="100" styleClass="text-area"/>

        <Label text="Hint:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextField fx:id="hintTextField" promptText="Enter hint here" maxWidth="1.0" GridPane.columnIndex="1" GridPane.rowIndex="2" prefHeight="50" styleClass="text-area"/>

    </GridPane>

    <Separator orientation="HORIZONTAL" />

    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="addFlashcardButton" text="Add Flashcard" onAction="#handleAddFlashcard" styleClass="secondary-buttons"/>
        <Label fx:id="errorMessageLabel" styleClass="error-message" visible="false"/>
    </HBox>

    <Separator orientation="HORIZONTAL" />

    <ScrollPane fx:id="flashcardsScrollPane" fitToWidth="true" fitToHeight="true" VBox.vgrow="ALWAYS">
        <VBox fx:id="flashcardsListVBox" spacing="5">
            <!-- Dynamically filled with flashcard summaries -->
        </VBox>
    </ScrollPane>

    <Separator orientation="HORIZONTAL" />

    <HBox spacing="10" alignment="CENTER">
        <Button text="Save Deck" onAction="#handleSaveDeck" styleClass="secondary-buttons"/>
        <Button text="Clear All" onAction="#handleClearAll" styleClass="secondary-buttons"/>
        <Button text="Back" onAction="#handleBack" styleClass="back-button"/>
    </HBox>
</VBox>
