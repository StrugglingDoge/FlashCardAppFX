<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<?import javafx.geometry.Insets?>
<GridPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.flashcardapp.gui.StudySessionSceneController" stylesheets="@style.css">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <vgap>
        <Double fx:value="20.0"/>
    </vgap>
    <hgap>
        <Double fx:value="20.0"/>
    </hgap>
    <columnConstraints>
        <ColumnConstraints percentWidth="50" minWidth="10" hgrow="SOMETIMES"/>
        <ColumnConstraints percentWidth="50" minWidth="10" hgrow="SOMETIMES"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10" prefHeight="30" vgrow="SOMETIMES"/>
    </rowConstraints>

    <!-- Study Session Title -->
    <Text text="Study Session" styleClass="scene-title" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2" GridPane.halignment="CENTER"/>

    <!-- Flashcard Section -->
    <StackPane GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.rowSpan="3">
        <VBox fx:id="flashcardSection" alignment="CENTER" spacing="10" styleClass="flashcard">
            <Text fx:id="questionText" text="Question appears here" styleClass="flashcard-content" wrappingWidth="280"/>
            <Text fx:id="answerText" text="Answer appears here" styleClass="flashcard-content" visible="false" wrappingWidth="280"/>
        </VBox>
    </StackPane>

    <!-- Hint Section -->
    <VBox fx:id="hintContainer" alignment="TOP_CENTER" spacing="10" styleClass="flashcard, hint-flashcard" GridPane.columnIndex="1" GridPane.rowIndex="1">
        <Text text="Hint" styleClass="flashcard-content"/>
        <Text fx:id="hintText" text="Click to reveal hint" styleClass="flashcard-content" wrappingWidth="280"/>
    </VBox>

    <!-- Statistics Section -->
    <VBox fx:id="statsContainer" alignment="TOP_CENTER" spacing="10" styleClass="flashcard, stats-flashcard" GridPane.columnIndex="1" GridPane.rowIndex="2">
        <Text text="Stats" styleClass="flashcard-content"/>
        <Text fx:id="sessionStatsText" text="Session stats will be shown here" styleClass="flashcard-content" wrappingWidth="280"/>
    </VBox>

    <!-- Navigation & Control Buttons Section -->
    <HBox spacing="10" alignment="CENTER" GridPane.columnIndex="0" GridPane.rowIndex="4" GridPane.columnSpan="2">
        <VBox spacing="10" alignment="CENTER">
            <HBox spacing="10" alignment="BOTTOM_CENTER">
                <Button text="Show Answer" onAction="#handleShowAnswer" styleClass="secondary-buttons"/>
                <Button text="Correct" onAction="#handleCorrect" styleClass="secondary-buttons"/>
                <Button text="Incorrect" onAction="#handleIncorrect" styleClass="secondary-buttons"/>
            </HBox>
            <HBox spacing="10" alignment="CENTER">
                <Button text="Previous" onAction="#handlePrevious" styleClass="secondary-buttons"/>
                <Button text="Next" onAction="#handleNext" styleClass="secondary-buttons"/>
                <Button text="Restart Session" onAction="#handleRestartSession" styleClass="secondary-buttons"/>
                <Button text="Back" onAction="#handleBack" styleClass="back-button"/>
            </HBox>
        </VBox>
    </HBox>
</GridPane>
