<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<VBox fx:id="mainVBox" spacing="20" alignment="CENTER" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.flashcardapp.gui.MainSceneController" stylesheets="/com/flashcardapp/gui/style.css">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Title Section -->
    <VBox alignment="CENTER" spacing="10">
        <Text text="Flashcard Study Helper" style="-fx-font-size: 24px;"/>
        <ImageView>
            <image>
                <Image url="@/com/flashcardapp/gui/logo.png" preserveRatio="true" requestedHeight="100"/>
            </image>
        </ImageView>
    </VBox>

    <Separator orientation="HORIZONTAL" maxWidth="600" />

    <!-- Buttons Section -->
    <VBox alignment="CENTER" spacing="10">
        <Button text="Start Studying" fx:id="startStudyingButton" onAction="#handleStartStudying" styleClass="main-buttons"/>
        <Button text="Create Deck" fx:id="createDeckButton" onAction="#handleCreateDeck" styleClass="main-buttons"/>
        <Button text="Settings" fx:id="settingsButton" onAction="#handleSettings" styleClass="main-buttons"/>
    </VBox>

    <!-- Status Section -->
    <HBox alignment="CENTER" spacing="10">
        <Text fx:id="statusText" style="-fx-font-size: 14px;"/>
    </HBox>
</VBox>